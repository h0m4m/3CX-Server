# Production Environment Configuration Template
# Copy this file to .env in your production server and update the values

# Flask Environment (IMPORTANT: Set to production)
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration - Choose one:

# Option 1: SQLite (default, good for small to medium workloads)
DATABASE_URL=sqlite:///assignment.db

# Option 2: MySQL
# DATABASE_URL=mysql+pymysql://username:password@localhost/database_name

# Option 3: PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost/database_name

# Option 4: SQL Server (for 3CX integration)
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Security Configuration (IMPORTANT: Change this in production!)
SECRET_KEY=your-super-secret-production-key-change-this

# Application Configuration
PORT=8000

# Logging Configuration (optional)
LOG_LEVEL=INFO